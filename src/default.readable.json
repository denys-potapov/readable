{
  "pathes": [
    "src/"
  ],
  "rules": {
    "namespace-max-files": {
      "max-files": 15
    },
    "file-max-size": {
      "max-lines": 200
    },
    "class-comment": true,
    "forbidden-functions": {
      "functions": [
        "eval", "print_r", "var_export", "var_dump", "phpinfo", "exec"
      ]
    },
    "variable-length": {
      "min-length": 3,
      "whitelist": ["$id", "$i"]
    }
  }
}
